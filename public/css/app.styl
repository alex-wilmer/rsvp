@import 'nib'
@import url('http://fonts.googleapis.com/css?family=Poiret+One')

global-reset()

body
  background url(/img/space.jpg) no-repeat center center fixed
  background-size cover
  color white
  font-family 'Helvetica'

.container
  padding-top 50px
  max-width 800px
  margin 0 auto
  text-align center

h1
  font-size 3em
  font-family 'Poiret One'

h2
  font-size 2em
  font-family 'Poiret One'

a
  color white
  text-decoration none
  cursor pointer

a:hover
  color purple + 120

.totals
  float left
  text-align left
  margin 10px
  span
    display inline-block
  span
  	padding 4px

.inputs
  float right
  input
    display inline block
    background-color rgba(0,0,0,0.5)
    color white
    border 1px solid
    padding 5px
    margin 10px
    font-size 1.1em
    placeholder(color white,)

textarea
	margin-top 20px
	background-color rgba(0,0,0,0.5)
	color white
	width 80%
	height 300px
	font-size 1.15em
	padding 20px

table 
  width 100%
  padding 50px

th
  font-weight bold

th:first-child 
  text-align left

td:nth-child(2), th:nth-child(2), 
td:nth-child(3), th:nth-child(3),
td:nth-child(4), th:nth-child(4)
  text-align center

td:last-child, th:last-child
  float right

td
  padding-top 10px

.outer-box
  width 100%
  height 100%
  background-color rgba(0, 0, 0, 0.5)
.inner-box 
  width 500px
  height 425px
  padding 20px
  background-color rgba(0, 0, 0, 0.8)
  border 2px solid white
.absolute-center
  margin auto
  position absolute
  top 0 
  left 0 
  bottom 0
  right 0
