@import 'nib'
@import url('http://fonts.googleapis.com/css?family=Poiret+One')

global-reset()

body
  background url(/img/space.jpg) no-repeat center center fixed
  background-size cover
  font-family 'Poiret One'
  color white
  text-align center

.container
  padding-top 50px
  max-width 800px
  margin 0 auto

h1
  font-size 3em

h2
  font-size 2em

a
  color white
  text-decoration none
  cursor pointer

a:hover
  color purple + 120

.totals
  float left
  text-align left
  margin 10px
  span
    font-family 'Helvetica'
    display inline-block
  span
  	padding 4px

.inputs
  float right
  input
    display inline block
    background-color rgba(0,0,0,0.5)
    color white
    border 1px solid
    padding 5px
    margin 10px
    font-size 1.1em
    placeholder(color white,)

table 
  width 100%
  padding 50px
  font-family 'Helvetica'

th
  font-weight bold

th:first-child 
  text-align left

td:nth-child(2), th:nth-child(2), 
td:nth-child(3), th:nth-child(3),
td:nth-child(4), th:nth-child(4)
  text-align center

td:last-child, th:last-child
  float right

td
  padding-top 10px
