/*
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Poiret+One')

/*
 * Nib provides a CSS reset
 */
global-reset()

body
  background url(/img/space.jpg) no-repeat center center fixed
  background-size cover
  font-family 'Poiret One'
  color white
  text-align center

.container
  padding-top 50px
  max-width 800px
  margin 0 auto

h1
  font-size 3em

h2
  font-size 2em

.form
  padding-top 20px

table 
  width 100%
  padding 50px
  font-family 'Helvetica'

th
  font-weight bold

th:first-child 
  text-align left

td:nth-child(2), th:nth-child(2), td:nth-child(3), th:nth-child(3)
  text-align center

td
  padding-top 10px
